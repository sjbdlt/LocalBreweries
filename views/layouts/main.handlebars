      <nav>
        <!-- Conditionally render login or logout links -->
        <a href="/" class="mr-2">Home</a>
        {{#if logged_in}}
        <a href="/api/breweries" class="mr-2">My Pubs</a>
        <button class="btn btn-link" id="logout">Logout</button>
        {{else}}
        <a href="/login" class="mr-2">Login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>
      <!-- Your footer content here -->
    </footer>
  </div>

  <!-- Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
