{{#each breweries as |brewery| }}
  <div class="brewery-template" id="mybrewlist" style="width: 100%;">
    <p> <h3>{{brewery.name}}</h3></p>
    <p> {{brewery.address}}</p>
    <p> {{brewery.city}} {{brewery.State}}, {{brewery.zipcode}}</p> 
    <p><h4> {{brewery.Remark}} </h4></p> 
    <p><h6> {{brewery.comments}} </h6> </p> 
    <div class="reviewcomment">
              <a href="breweries/singlebrewery/{{brewery.id}}">Comment</a>  
    </div> 
    <button type="button" class="btn btn-primary mt-3 btn-delete-brewery" id="deletebtn" data-index="{{brewery.id}}">Remove Brewery</button>
  </div>       
{{/each}}


<script src="/js/mypubs.js"></script>